$('#project_picker #project_<%= @current_project.id %>').addClass('current');
<% if @prior_project%>
  $('#project_picker #project_<%= @prior_project.id %>').removeClass('current');
<% end %>

$('#current_project').replaceWith("<%= escape_javascript(render :partial => 'home/current_project_block') %>");
$('#current_project').show();
$('#work_unit_form').replaceWith("<%= escape_javascript(render :partial => 'home/work_unit_form') %>");
$('#work_unit_form').show();
$('#timeclock #manual_entry_trigger').hide();
$('#timeclock #manual_entry_collapse').show();
$('#work_unit_form.toggler').html("<%= escape_javascript(project_headline(current_project)) %>");
<% unless current_user.clocked_in? %>
  $('#timeclock').replaceWith("<%= escape_javascript(render :partial => 'shared/timeclock') %>");
<% end %>
initialize_tabs();
