%ul.actions
  %li= link_to_if_admin_authorized("New User", new_user_path)

%table.listing
  %tr
    %th Name
    %th Email
    %th Current Project
  - @users.each do |user|
    %tr
      %td= link_to_if_owner_authorized(user, user.name, user)
      %td= user.email
      %td= user.current_project.try(:name) || "(none)"
      %td= link_to_if_owner_authorized(user, "Edit", edit_user_path(user)) {}
